<link href="/stylesheets/signin.css" rel="stylesheet">

<form class="form-signin text-center" action="/auth/login" method="POST" id="form-container">
    <img class="mb-4" src="/images/profes.gif" alt="" width="300" height="250">
    <p class="h2 mb-2 font-weight-normal">Login</p>
    <p class="h6 mb-2 font-weight-normal">(Si, son Dani y Germ√°n)</p>

    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" class="form-control" placeholder="jonSnow@winter.fell" name="email" required autofocus>

    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="Password" name="password" required>
    {{#if message }}
        <div class="error-message">{{ message }}</div>
    {{/if}}
    <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
        {{#if message }}
            <div class="error-message">{{ message }}</div>
        {{/if}}
        <br>
    </div>
    <button class="btn btn-custom btn-block" type="submit">Log in</button>
    <p class="mt-5 mb-3 text-muted">&copy; 2018-2019</p>
</form>